{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/back/src",
  "monorepo": true,
  "root": "apps/back",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/back/tsconfig.app.json"
  },
  "generateOptions": {
    "flat": true
  },
  "projects": {
    "back": {
      "type": "application",
      "root": "apps/back",
      "entryFile": "main",
      "sourceRoot": "apps/back/src",
      "compilerOptions": {
        "tsConfigPath": "apps/back/tsconfig.app.json"
      }
    },
    "micro-service": {
      "type": "application",
      "root": "apps/micro-service",
      "entryFile": "main",
      "sourceRoot": "apps/micro-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/micro-service/tsconfig.app.json"
      }
    }
  }
}