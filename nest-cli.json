{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/back/src",
  "monorepo": true,
  "root": "apps/back",
  "compilerOptions": {
    "tsConfigPath": "apps/back/tsconfig.app.json",
    "assets": [
      "./server-common/**/*.ts",
      "./server-common/**/*.yaml",
      "./server-common/**/*.*.env"
    ],
    "watchAssets": true
  },
  "projects": {
    "back": {
      "type": "application",
      "root": "apps/back",
      "entryFile": "main",
      "sourceRoot": "apps/back/src",
      "compilerOptions": {
        "tsConfigPath": "apps/back/tsconfig.app.json"
      }
    },
    "transfer": {
      "type": "application",
      "root": "apps/transfer",
      "entryFile": "main",
      "sourceRoot": "apps/transfer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transfer/tsconfig.app.json"
      }
    }
  }
}